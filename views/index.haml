- is_open = @last_tweet.published_at < Time.now - 1.day
%html.no-js.wf-karla-n4-active.wf-active
  %head
    %link{rel: "stylesheet", type:"text/css", href: url("/assets/stylesheets/base.css")}
    %title= is_open ? "YES it's OPEN! Is Pico del Teide Cable Car Open?" : "NO it's CLOSED! Is Pico del Teide Cable Car Open?"
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %meta{charset: "utf-8"}

    %meta{name:"description", content: "Is Pico del Teide Cable Car Open?"}
    %meta{name:"keywords", content: "pico, del, teide, cable, car, mointain, teneriffe"}
    %meta{name:"author", content: "Jan Kus"}

    %meta{property:"og:title", content: is_open ? "YES! Pico del Teide Cable Car is Open!" : "NO! Pico del Teide Cable Car is closed :-("}
    %meta{property:"og:url", content:"http://www.isteideopen.com"}
    %meta{property:"og:image", content:"http://www.isteideopen.com/teide.jpg"}
    %meta{property:"og:description", content:"Is Pico del Teide Cable Car Open?"}

    %meta{name:"twitter:card", content:"summary"}
    %meta{name:"twitter:url", content:"http://www.isteideopen.com"}
    %meta{name:"twitter:title", content:is_open ? "YES! Pico del Teide Cable Car is Open!" : "NO! Pico del Teide Cable Car is closed :-("}
    %meta{name:"twitter:image", content:"http://www.isteideopen.com/teide.jpg"}
    %meta{name:"twitter:description", content:"Is Pico del Teide Cable Car Open?"}

  %body.index
    .o-app
      .header
        Is El Teide Open?
      .main.o-app__content
        - if is_open
          %h2 Probably OPEN
          %p
            = "Last tweet: #{@last_tweet.text}; #{@last_tweet.published_at}"
          %p
            Better check
            %a{href: 'https://www.volcanoteide.com/en'} Volcano Teide
            for details
        - else
          %h2 CLOSED
          = "Last tweet: #{@last_tweet.text}; #{@last_tweet.published_at}"

      .footer.o-app__footer
        .footer-links
          %a{target: '_blank', href: 'http://www.lascasasdelcaminoreal.com/', class: "c-sponsor"}
            Presented by: Las Casas del Camino Real
          %a{target: '_blank', href: "http://railslove.com", class: "c-brand"}
            A Railslove Project

